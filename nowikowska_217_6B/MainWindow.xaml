<Window x:Class="nowikowska_217_6B.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nowikowska_217_6B"
        mc:Ignorable="d"
        Title="Image Browser" Height="800" Width="600" MinHeight="500" MinWidth="500" WindowStartupLocation="CenterScreen" Background="#FFC9B1B1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="3">
            <MenuItem Header="File">
                <MenuItem Header="Open Image" Click="OpenImageClick"></MenuItem>
                <MenuItem Header="Open Folder" Click="OpenFolderClick"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Exit" Click="ExitClick"></MenuItem>
            </MenuItem>
            <MenuItem Header ="About" Click="AboutClick"></MenuItem>
        </Menu>
    </Grid>
</Window>
